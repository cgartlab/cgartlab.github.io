views:
  - type: table
    name: 表格
    filters:
      and:
        - '!file.inFolder("_files")'
        - '!file.inFolder("_images")'
        - '!file.inFolder("templates")'
    order:
      - file.name
      - file.folder
      - abbrlink
      - tags
      - published
      - description
      - file.embeds
    sort:
      - property: file.folder
        direction: DESC
      - property: file.name
        direction: ASC
    columnSize:
      note.abbrlink: 198
      note.tags: 158
