---
import type { Language } from '@/i18n/config'
import WorksGallery from '@/components/WorksGallery.astro'
import { defaultLocale, moreLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'
import { getPostsByTag, getTagSupportedLangs } from '@/utils/content'

export async function getStaticPaths() {
  type PathItem = {
    params: { works: string }
    props: { lang: Language }
  }

  const paths: PathItem[] = []

  // Default locale - 'works' is the base path
  paths.push({
    params: { works: 'works' },
    props: { lang: defaultLocale as Language },
  })

  // More locales - 'works/lang'
  moreLocales.forEach((lang) => {
    paths.push({
      params: { works: `works/${lang}` },
      props: { lang: lang as Language },
    })
  })

  return paths
}

const { lang } = Astro.props
const posts = await getPostsByTag('作品', lang)
const supportedLangs = await getTagSupportedLangs('作品')
---

<Layout supportedLangs={supportedLangs}>
  <!-- Decorative Line -->
  <div class="uno-decorative-line" />

  <!-- Page Header -->
  <div class="mt-10.5 text-center">
    <h1 class="mb-4 text-6 c-primary font-bold">
      {lang === 'zh' ? '作品展示' : lang === 'zh-tw' ? '作品展示' : 'Works Gallery'}
    </h1>
    <p class="mx-auto max-w-2xl text-lg opacity-80">
      {lang === 'zh'
? '探索我的创作历程，从数字艺术到项目实践'
       : lang === 'zh-tw'
? '探索我的創作歷程，從數字藝術到項目實踐'
       : 'Explore my creative journey, from digital art to project practice'}
    </p>
  </div>

  <!-- Works Gallery -->
  <div class="mt-10.5">
    <WorksGallery
      posts={posts}
      lang={lang}
    />
  </div>
</Layout>
