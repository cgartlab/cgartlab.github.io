---
interface Props {
  title: string
  description?: string
  url: string
  icon?: string
}

const { title, description, url, icon } = Astro.props
---

<a href={url} target="_blank" rel="noopener noreferrer" class="link-card">
  <div class="link-card-content">
    {icon && (
      <img src={icon} alt={title} class="link-card-icon" />
    )}
    <div class="link-card-text">
      <h3 class="link-card-title">{title}</h3>
      {description && <p class="link-card-description">{description}</p>}
    </div>
  </div>
  <div class="link-card-arrow">
    <svg class="h-1.2em w-1.2em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M7 7h10v10M7 17L17 7" />
    </svg>
  </div>
</a>

<style>
.link-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.25rem;
  border-radius: 0.5rem;
  border: 1px solid oklch(var(--un-preset-theme-colors-secondary) / 0.15);
  background: oklch(var(--un-preset-theme-colors-background) / 0.5);
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease-out;
  gap: 1rem;
}

.link-card:hover {
  border-color: oklch(var(--un-preset-theme-colors-primary) / 0.3);
  background: oklch(var(--un-preset-theme-colors-background) / 0.8);
  box-shadow: 0 4px 12px oklch(var(--un-preset-theme-colors-primary) / 0.1);
  transform: translateY(-2px);
}

.link-card-content {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex: 1;
  min-width: 0;
}

.link-card-icon {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.5rem;
  object-fit: cover;
  flex-shrink: 0;
}

.link-card-text {
  flex: 1;
  min-width: 0;
}

.link-card-title {
  margin: 0;
  font-size: 1rem;
  font-weight: 600;
  color: oklch(var(--un-preset-theme-colors-primary));
  transition: color 0.3s ease-out;
}

.link-card:hover .link-card-title {
  color: oklch(var(--un-preset-theme-colors-primary));
}

.link-card-description {
  margin: 0.25rem 0 0;
  font-size: 0.875rem;
  color: oklch(var(--un-preset-theme-colors-secondary));
  opacity: 0.7;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-card-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  border-radius: 0.5rem;
  background: oklch(var(--un-preset-theme-colors-primary) / 0.1);
  color: oklch(var(--un-preset-theme-colors-primary));
  flex-shrink: 0;
  opacity: 0.6;
  transition: all 0.3s ease-out;
}

.link-card:hover .link-card-arrow {
  opacity: 1;
  background: oklch(var(--un-preset-theme-colors-primary) / 0.2);
  transform: translateX(2px);
}
</style>
